<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<View
    android:background="@drawable/border_azul_menos"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="170dip"
    android:layout_height="300dip"
    android:id="@+id/view1">
</View>

<View
    android:background="@drawable/border_rosa"
    android:tag="@color/cor_rosa"
    android:layout_width="170dip"
    android:layout_height="wrap_content"
    android:layout_below="@+id/view1"
    android:layout_toEndOf="@+id/view1"
    android:layout_toRightOf="@+id/view1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/view2">
</View>

<View
    android:background="@drawable/border_azul"
    android:tag="@color/cor_azul"
    android:layout_width="wrap_content"
    android:layout_height="350dip"
    android:layout_toEndOf="@+id/view1"
    android:layout_toRightOf="@+id/view2"
    android:layout_below="@+id/view4"
    android:id="@+id/view3">
</View>

<View
    android:background="@drawable/border_banco"
    android:tag="@color/cor_branco"
    android:layout_width="wrap_content"
    android:layout_height="200dip"
    android:layout_toRightOf="@+id/view2"
    android:layout_below="@+id/view5"
    android:id="@+id/view4">
</View>

<View
    android:background="@drawable/border_vermelho"
    android:layout_height="200dp"
    android:tag="@color/cor_vermelho"
    android:layout_width="wrap_content"
    android:layout_toEndOf="@+id/view1"
    android:layout_toRightOf="@+id/view1"
    android:id="@+id/view5">
</View>

<SeekBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/seekBar"
    android:background="@color/black"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>
</RelativeLayout>